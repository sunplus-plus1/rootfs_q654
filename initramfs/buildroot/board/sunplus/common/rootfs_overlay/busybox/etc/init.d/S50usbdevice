}

configure_uvc_resolution_h264()
{
	W=$1
	H=$2
	DIR=$3/${H}p/
	mkdir ${DIR}
	echo $W > ${DIR}/wWidth
	echo $H > ${DIR}/wHeight
	echo 333333 > ${DIR}/dwDefaultFrameInterval
	echo $((W*H*10)) > ${DIR}/dwMinBitRate
	echo $((W*H*10)) > ${DIR}/dwMaxBitRate
	#echo $((W*H*2)) > ${DIR}/dwMaxVideoFrameBufferSize
	#echo -e "333333\n666666\n1000000\n2000000" > ${DIR}/dwFrameInterval
	cat <<EOF  > ${DIR}/dwFrameInterval
333333
666666
1000000
2000000
EOF
}

syslink_function()
{
	echo "$1"
	ln -s ${USB_FUNCTIONS_DIR}/$1 ${USB_CONFIGS_DIR}/f${USB_FUNCTIONS_CNT}
	let USB_FUNCTIONS_CNT=USB_FUNCTIONS_CNT+1
}

function setup_hid_imu()
{
    hid_imu_path="hid.imu"
    mkdir ${USB_FUNCTIONS_DIR}/${hid_imu_path}
    for file in $(ls /etc/sunplus/hid_desc/*)
    do
	    echo $file
	    break
    done
    HID_PROTOCOL=`ls $file | awk -F '_' '{print $4}'`
    HID_REPORT_LEN=`ls $file | awk -F '_' '{print $5}' |  awk -F '.' '{print $1}'`
    echo "hid protocol:"$HID_PROTOCOL
    echo "report len:"$HID_REPORT_LEN
    echo $HID_PROTOCOL > ${USB_FUNCTIONS_DIR}/${hid_imu_path}/protocol
    echo 0 > ${USB_FUNCTIONS_DIR}/${hid_imu_path}/subclass
    echo $HID_REPORT_LEN > ${USB_FUNCTIONS_DIR}/${hid_imu_path}/report_length
    cat $file > ${USB_FUNCTIONS_DIR}/${hid_imu_path}/report_desc

    ln -s ${USB_FUNCTIONS_DIR}/${hid_imu_path} ${USB_CONFIGS_DIR}/f${USB_FUNCTIONS_CNT}
    let USB_FUNCTIONS_CNT=USB_FUNCTIONS_CNT+1
}

bind_functions()
{
	USB_FUNCTIONS_CNT=1
	test $UAC1_EN = on && syslink_function uac1.gs0
	test $UAC2_EN = on && syslink_function uac2.gs0

	if [ $UVC_EN = on ];then
		mkdir ${UVC_CONTROL_DIR}/header/h
		ln -s ${UVC_CONTROL_DIR}/header/h ${UVC_CONTROL_DIR}/class/fs/h
		ln -s ${UVC_CONTROL_DIR}/header/h ${UVC_CONTROL_DIR}/class/ss/h

		##YUYV support config
		mkdir ${UVC_U_DIR}
		configure_uvc_resolution_yuyv 640 480 ${UVC_U_DIR}
		configure_uvc_resolution_yuyv 1280 720 ${UVC_U_DIR}
		configure_uvc_resolution_yuyv  1920 1080 ${UVC_U_DIR}
		configure_uvc_resolution_yuyv_3840  3840  1080 ${UVC_U_DIR}
		configure_uvc_resolution_yuyv_3840_H  3840  1080 ${UVC_U_DIR}

		##mjpeg support config
		mkdir ${UVC_M_DIR}
		configure_uvc_resolution_mjpeg 640 480 ${UVC_M_DIR}
		configure_uvc_resolution_mjpeg 1280 720 ${UVC_M_DIR}
		configure_uvc_resolution_mjpeg 1920 1080 ${UVC_M_DIR}
		configure_uvc_resolution_mjpeg_3840 3840 1080 ${UVC_M_DIR}
		#configure_uvc_resolution_mjpeg 2560 1440
		#configure_uvc_resolution_mjpeg 2592 1944

		## h.264 support config
		#mkdir ${UVC_F_DIR}
		#configure_uvc_resolution_h264 640 480
		#configure_uvc_resolution_h264 1280 720
		#configure_uvc_resolution_h264 1920 1080

		mkdir ${UVC_STREAMING_DIR}/header/h
		ln -s ${UVC_U_DIR} ${UVC_STREAMING_DIR}/header/h/u
		ln -s ${UVC_M_DIR} ${UVC_STREAMING_DIR}/header/h/m
		ln -s ${UVC_STREAMING_DIR}/header/h ${UVC_STREAMING_DIR}/class/fs/h
		ln -s ${UVC_STREAMING_DIR}/header/h ${UVC_STREAMING_DIR}/class/hs/h
		ln -s ${UVC_STREAMING_DIR}/header/h ${UVC_STREAMING_DIR}/class/ss/h

		if [ $UVC2_EN = on ];then
			echo 2048 > ${UVC_DIR}/streaming_maxpacket
		else
			echo 3072 > ${UVC_DIR}/streaming_maxpacket
		fi

		echo 15 > ${UVC_DIR}/streaming_maxburst
		echo 0 > ${UVC_DIR}/streaming_interval

		if [[ $UVC_BULK_MODE_EN = on ]];then
			echo 1 > ${UVC_DIR}/streaming_bulk
		fi

		syslink_function uvc.gs6
	fi

	if [ $UVC2_EN = on ];then
		mkdir ${UVC2_CONTROL_DIR}/header/h
		ln -s ${UVC2_CONTROL_DIR}/header/h ${UVC2_CONTROL_DIR}/class/fs/h
		ln -s ${UVC2_CONTROL_DIR}/header/h ${UVC2_CONTROL_DIR}/class/ss/h

		##YUYV support config
		mkdir ${UVC2_U_DIR}
		configure_uvc_resolution_yuyv 640 480 ${UVC2_U_DIR}
		configure_uvc_resolution_yuyv 1280 720 ${UVC2_U_DIR}
		configure_uvc_resolution_yuyv 1920 1080 ${UVC2_U_DIR}

		##mjpeg support config
		mkdir ${UVC2_M_DIR}
		configure_uvc_resolution_mjpeg 640 480 ${UVC2_M_DIR}
		configure_uvc_resolution_mjpeg 1280 720 ${UVC2_M_DIR}
		configure_uvc_resolution_mjpeg 1920 1080 ${UVC2_M_DIR}
		#configure_uvc_resolution_mjpeg 2560 1440
		#configure_uvc_resolution_mjpeg 2592 1944

		## h.264 support config
		#configure_uvc_resolution_h264 640 480
		#configure_uvc_resolution_h264 1280 720
		#configure_uvc_resolution_h264 1920 1080

		mkdir ${UVC2_STREAMING_DIR}/header/h
		ln -s ${UVC2_U_DIR} ${UVC2_STREAMING_DIR}/header/h/u
		ln -s ${UVC2_M_DIR} ${UVC2_STREAMING_DIR}/header/h/m
		ln -s ${UVC2_STREAMING_DIR}/header/h ${UVC2_STREAMING_DIR}/class/fs/h
		ln -s ${UVC2_STREAMING_DIR}/header/h ${UVC2_STREAMING_DIR}/class/hs/h
		ln -s ${UVC2_STREAMING_DIR}/header/h ${UVC2_STREAMING_DIR}/class/ss/h

		echo  0 > ${UVC2_DIR}/streaming_interval
		echo  6 > ${UVC2_DIR}/streaming_maxburst
		echo 2048 > ${UVC2_DIR}/streaming_maxpacket

		if [[ $UVC_BULK_MODE_EN = on ]];then
			echo 1 > ${UVC2_DIR}/streaming_bulk
		fi

		syslink_function uvc.gs7
	fi

	test $MTP_EN = on && syslink_function mtp.gs0
	test $NTB_EN = on && syslink_function ffs.ntb
	test $ADB_EN = on && syslink_function ffs.adb
	test $ACM_EN = on && syslink_function acm.gs6
	test $RNDIS_EN = on && syslink_function rndis.gs0

	if [ $HID_EN = on ]; then
		setup_hid_imu
	fi

	if [ $UMS_EN = on ];then
		echo ${UMS_RO} > ${USB_FUNCTIONS_DIR}/mass_storage.0/lun.0/ro
		if [ "$UMS_BLOCK_SIZE" != "0" -a ! -e ${UMS_BLOCK} ]; then
			dd if=/dev/zero of=${UMS_BLOCK} bs=1M count=${UMS_BLOCK_SIZE}
			mkfs.${UMS_BLOCK_TYPE} ${UMS_BLOCK}
			test $? && echo "Warning: failed to mkfs.${UMS_BLOCK_TYPE} ${UMS_BLOCK}"
		fi
		mkdir /mnt/ums -p
		if [[ $UMS_BLOCK_AUTO_MOUNT = on ]];then
			mount ${UMS_BLOCK} /mnt/ums
		else
			if [[  -n "$UMS_LUN_FILE"  &&  -e "$UMS_LUN_FILE"  ]]; then
				echo ${UMS_LUN_FILE} > ${USB_FUNCTIONS_DIR}/mass_storage.0/lun.0/file
				echo "${UMS_LUN_FILE} used as lun file"
			else
				echo ${UMS_LUN_DEFAULT_FILE} > ${USB_FUNCTIONS_DIR}/mass_storage.0/lun.0/file
				echo "${UMS_LUN_DEFAULT_FILE} used as lun file"
			fi
		fi
		syslink_function mass_storage.0
	fi

	echo ${CONFIG_STRING} > ${USB_CONFIGS_DIR}/strings/${USB_ATTRIBUTE}/configuration
}

run_binary()
{
	if [ $MTP_EN = on ];then
		start-stop-daemon --start --quiet --background --exec /usr/bin/mtp-server
	fi

	#restart network for usb0
	if [ $RNDIS_EN = on ];then
		/sbin/ifup usb0
	fi
}

program_kill()
{
	P_PID=`ps | grep $1 | grep -v grep | awk '{print $1}'`
	test -z ${P_PID} || kill -9 ${P_PID}
}

usb_device_stop()
{
	touch /tmp/.udc_pause
	sync
        echo h > /sys/bus/platform/devices/f8102800.usb/udc_ctrl
	echo "" > ${USB_CONFIGFS_DIR}/UDC
	program_kill adbd
	program_kill mtp-server
	ls ${USB_CONFIGS_DIR} | grep f[0-9] | xargs -I {} rm ${USB_CONFIGS_DIR}/{}
	#rm /tmp/.udc_pause
	sync
}

common_start()
{
	export OMX_BELLAGIO_REGISTRY=/root/.omxregister
	omxregister-bellagio /usr/lib/bellagio
}

uvc_start(){
	UVC_CONFIG_FILE=/etc/.usb_config
	UVC_LOG_PATH=/var/log/uvc
	UVC_LOG_FILE=/var/log/uvc/gst-source.log

	if [ ! -d ${UVC_LOG_PATH} ]; then
		mkdir  -p  ${UVC_LOG_PATH}
	fi

	# check uvc
	if [ ! -f ${UVC_CONFIG_FILE} ]; then
		echo "[`date +'%F %T'`] no ${UVC_CONFIG_FILE} file" >> ${UVC_LOG_FILE}
		exit 0
	fi

	cat ${UVC_CONFIG_FILE} | grep -q _uvc
	if [ $? -ne 0 ]; then
		echo "[`date +'%F %T'`] file ${UVC_CONFIG_FILE} no open uvc" >> ${UVC_LOG_FILE}
		exit 0
	fi

	DEVICE_VIDEO_0=/dev/video0
	DEVICE_VIDEO_1=/dev/video1

	device_videos=`v4l2-ctl --list-devices 2>/dev/null | grep -A2 gadget | grep -v gadget | grep -v grep`
	if [ -n "${device_videos}" ]; then
		DEVICE_VIDEO_0=`echo ${device_videos} | awk '{print $1}'`
		DEVICE_VIDEO_1=`echo ${device_videos} | awk '{print $2}'`
	fi

	echo "uvc device video file: ${DEVICE_VIDEO_0} ${DEVICE_VIDEO_1}"

	if [ -z "${DEVICE_VIDEO_0}" ]; then
		echo "[`date +'%F %T'`] not get uvc device file" >> ${UVC_LOG_FILE}
		exit -1
	fi

	if [ ! -c ${DEVICE_VIDEO_0} ]; then
		echo "[`date +'%F %T'`] no ${DEVICE_VIDEO_0} device file" >> ${UVC_LOG_FILE}
		exit -1
	fi

	nohup uvc-gadget -p /etc/sunplus/uvc/ -u ${DEVICE_VIDEO_0} uvc.gs6 &
	sleep 1

	if [ -z "${DEVICE_VIDEO_1}" ]; then
        	echo "[`date +'%F %T'`] no second uvc device file" >> ${UVC_LOG_FILE}
        	exit 0
	fi

	if [ ! -c ${DEVICE_VIDEO_1} ]; then
        	echo "[`date +'%F %T'`] no ${DEVICE_VIDEO_1} device file" >> ${UVC_LOG_FILE}
        	exit 0
	fi

	nohup uvc-gadget -p /etc/sunplus/uvc/ -u ${DEVICE_VIDEO_1} uvc.gs7 &
}

uvc_stop(){
	ps aux | grep uvc-gadget | grep -v grep | awk '{print $2}' | xargs -i kill -9 {}
	echo "uvc-gadget stop"
}

usb_device_start()
{
	#DIR=$(cd `dirname $0`; pwd)
        DIR=/etc
        if [ ! -e "$DIR/.usb_config" ]; then
                echo "$0: Cannot find .usb_config"
                exit 0
        fi

        if [ -e /tmp/.usb_config ]; then
                USB_CONFIG_FILE=/tmp/.usb_config
        else
                USB_CONFIG_FILE=$DIR/.usb_config
                cp $DIR/.usb_config /tmp/.usb_config
        fi

        parameter_init
        if [ -z $CONFIG_STRING ]; then
                echo "$0: no function be selected"
                exit 0
        fi
        test -d ${USB_CONFIGFS_DIR} || configfs_init
        use_os_desc
        echo $PID > ${USB_CONFIGFS_DIR}/idProduct
        bind_functions
        pre_run_binary
        UDC="f80a1000.dwc3"
        if [ $GADGET_DEVICE = usb2 ];then
                UDC="f8102800.usb"
                echo host > /sys/kernel/debug/usb/f80a1000.dwc3/mode
        fi
        sleep 1
        echo $UDC > ${USB_CONFIGFS_DIR}/UDC
        run_binary
}

case "$1" in
start)
	common_start
	usb_device_start
	uvc_start

	if [ $GADGET_DEVICE = usb2 ];then
		sleep 2
                echo d > /sys/bus/platform/devices/f8102800.usb/udc_ctrl
        fi
	;;
stop)
	uvc_stop
#	usb_device_stop
	;;
restart|reload)
	# Do restart usb by udev
	echo "USB_FORCE_CHANGED" >> /tmp/.usb_config
	usb_device_stop
	sleep 1
	$0 start
	# Don't forget to clear "USB_FORCE_CHANGED"
	sed -i "/USB_FORCE_CHANGED/d" /tmp/.usb_config
	;;
*)
	echo "Usage: $0 {start|stop|restart}"
	exit 1
esac

exit 0
